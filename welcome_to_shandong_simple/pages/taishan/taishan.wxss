}
.btnLayout{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 20rpx;
}
button{
    width: 30%;
}
.box{
    border: 1px solid rgb(240, 241, 236);
  }
  .title{
      font-size: large;
      text-align: center;
      margin-bottom: 15px;
      color: red;
  }
  .name_and_class{
      font-size: 15px;
      text-align: end;
      margin-bottom: 15px;
      color: blue;
      font-family: cursive;
      font-style: italic;
      font-weight: bold;
  }
  .boxMode101{
    width: 70%;
    height: 70px;
    background-color: yellow;
    border: 3px dashed #ff0000;
    padding: 20px;
